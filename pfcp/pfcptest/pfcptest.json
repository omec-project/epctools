{
    "EpcTools": {
        "EnablePublicObjects": true,
        "Debug": false,
        "SynchronizationObjects": {
            "NumberSemaphores": 100,
            "NumberMutexes": 100
        },
        "Logger": {
            "ApplicationName": "epctest",
            "QueueSize": 8192,
            "NumberThreads": 1,
            "SinkSets": [
               {
                  "SinkID": 1,
                  "Sinks": [
                     {
                        "SinkType": "syslog",
                        "LogLevel": "startup",
                        "Pattern": "[__APPNAME__] [%n] [%l] %v"
                     },
                     {
                        "SinkType": "stdout",
                        "LogLevel": "debug",
                        "Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [stdout] [%^__APPNAME__%$] [%n] [%^%l%$] %v"
                     },
                     {
                        "SinkType": "stderr",
                        "LogLevel": "minor",
                        "Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [stderr] [%^__APPNAME__%$] [%n] [%^%l%$] %v"
                     },
                     {
                        "SinkType": "basic_file",
                        "LogLevel": "debug",
                        "Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [%^__APPNAME__%$] [%n] [%^%l%$] %v",
                        "FileName": "./logs/epctest.basic.log",
                        "Truncate": false
                     },
                     {
                        "SinkType": "rotating_file",
                        "LogLevel": "debug",
                        "Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [%^__APPNAME__%$] [%n] [%^%l%$] %v",
                        "FileName": "./logs/epctest.rotating.log",
                        "MaxSizeMB": 1,
                        "MaxNumberFiles": 2,
                        "RotateOnOpen": false
                     },
                     {
                        "SinkType": "daily_file",
                        "LogLevel": "debug",
                        "Pattern": "[%Y-%m-%dT%H:%M:%S.%e] [%^__APPNAME__%$] [%n] [%^%l%$] %v",
                        "FileName": "./logs/epctest.daily.log",
                        "Truncate": false,
                        "RolloverHour": 14,
                        "RolloverMinute": 55
                     }
                  ]
               }
            ],
            "Logs": [
               {
                  "LogID": 1,
                  "Category": "system",
                  "SinkID": 1,
                  "LogLevel": "debug"
               },
               {
                  "LogID": 2,
                  "Category": "pfcp",
                  "SinkID": 1,
                  "LogLevel": "debug"
               },
               {
                  "LogID": 3,
                  "Category": "tests",
                  "SinkID": 1,
                  "LogLevel": "debug"
               }
            ]
        },
        "LoggerOptions": {
            "WriteToFile": true,
            "QueueID": 9999,
            "QueueMode": "WriteOnly"
        },
        "Logger": [
            {
                "LogID": 1,
                "Segments": 1,
                "LinesPerSegment": 10,
                "FileNameMask": "./testlog1_%A_%S.log",
                "LogType": "File",
                "DefaultLogMask": "0x0000000000000000",
                "FTInternalLog": false
            },
            {
                "LogID": 2,
                "Segments": 2,
                "LinesPerSegment": 10,
                "FileNameMask": "./testlog2_%A_%S.log",
                "LogType": "File",
                "DefaultLogMask": "0x0000000000000000",
                "FTInternalLog": false
            }
        ],
        "PublicQueue": [
            {
                "QueueID": 1,
                "MessageSize": 50,
                "QueueSize": 16384,
                "AllowMultipleReaders": true,
                "AllowMultipleWriters": true
            },
            {
                "QueueID": 2,
                "MessageSize": 100,
                "QueueSize": 16384,
                "AllowMultipleReaders": true,
                "AllowMultipleWriters": false
            },
            {
                "QueueID": 3,
                "MessageSize": 200,
                "QueueSize": 16384,
                "AllowMultipleReaders": false,
                "AllowMultipleWriters": false
            },
            {
                "QueueID": 4,
                "MessageSize": 1024,
                "QueueSize": 16384,
                "AllowMultipleReaders": false,
                "AllowMultipleWriters": true
            }
        ]
    }
}
